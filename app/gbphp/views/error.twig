{% extends 'layouts/main.twig' %}
{% block style %}
    .container {
    text-align: center;
    padding: 20px;
    border-radius: 10px;
    background-color: white;
    box-shadow: 0 0 10px rgba(0,0,0,0.1);
    }
    h1 {
    color: #333;
    font-size: 48px;
    margin-bottom: 10px;
    }
    p {
    color: #666;
    font-size: 18px;
    margin-bottom: 20px;
    }
    .btn {
    display: inline-block;
    padding: 10px 20px;
    background-color: #4CAF50;
    color: white;
    text-decoration: none;
    border-radius: 5px;
    font-size: 16px;
    transition: background-color 0.3s;
    }
    .btn:hover {
    background-color: #45a049;
    }
{% endblock %}
{% block content %}
    <div class="container">
        <h1>404</h1>
        <p>Упс! Страница не найдена.</p>
        <a href="/" class="btn">Вернуться на главную</a>
    </div>
{% endblock %}