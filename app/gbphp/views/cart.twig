{% extends 'layouts/main.twig' %}
{% block style %}
    body {
    font-family: Arial, sans-serif;
    margin: 20px;
    }

    h1, h2 {
    color: #333;
    }

    .products {
    display: flex;
    gap: 20px;
    }

    .product {
    border: 1px solid #ddd;
    padding: 10px;
    border-radius: 5px;
    width: 150px;
    }

    .cart-button {
    background-color: #28a745;
    color: white;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    text-decoration: none;
    width: 35px;
    height: 35px;
    box-sizing: border-box;
    justify-content: center;
    align-items: center;
    display: flex;
    margin-top:15px;
    width:  100px;
    }

    .cart-button:hover {
    background-color: #218838;
    }

    .cart-item button {
    background-color: #dc3545;
    }

    .cart-item button:hover {
    background-color: #c82333;
    }

    .cart-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-bottom: 1px solid #ddd;
    padding: 10px 0;
    }

    .delete {
    background-color: #dc3545;
    }

    .delete:hover {
    background-color: #c82333;
    }

    .change {
    margin-top: 5px;
    display: flex;
    justify-content: space-between;
    }

    .cart-item:last-child {
    border-bottom: none;
    }

    .cart-item select {
    margin-right: 10px;
    }

    input {
    width: 25px;
    margin-bottom: 10px;
    }

    #cart {
    margin-top: 20px;
    border: 1px solid #ddd;
    padding: 10px;
    border-radius: 5px;
    }
    #order-form {
    margin-top: 20px;
    border: 1px solid #ddd;
    padding: 10px;
    border-radius: 5px;
    }

    .form-group {
    margin-bottom: 10px;
    }

    .form-group label {
    display: block;
    margin-bottom: 5px;
    color: #333;
    }

    .form-group input {
    width: calc(100% - 10px);
    padding: 5px;
    border: 1px solid #ddd;
    border-radius: 5px;
    font-size: 14px;
    }

    #submit-order {
    background-color: #28a745;
    color: white;
    border: none;
    padding: 5px 10px;
    border-radius: 5px;
    cursor: pointer;
    height: 30px;
    width: 100%;
    font-size: 14px;
    line-height: 20px;
    text-align: center;
    }

    #submit-order:hover {
    background-color: #218838;
    }
    .change__change {
    display: flex;
    gap: 10px;

{% endblock %}
{% block content %}
    <h1>Shopping Cart</h1>
    <div id="cart">
        {% if cart|length == 0 %}
            Cart is empty
        {% endif %}
        {% for good in cart %}
            <div class='cart-item'>
                <h3>{{ good.name }}</h3>
                <p>Price per item: {{ good.price }} </p>
                <p>Count: {{ good.count }} </p>
                <p>Total price: {{ good.count * good.price }} </p>
            </div>
            <div>
                <div class='change'>
                    <div class="change__change">
                        <button class='cart-button' onclick="AjaxButton({{ good.id }},'add', 'cart')">+</button>
                        <button class='cart-button' onclick="AjaxButton({{ good.id }},'dec', 'cart')">-</button>
                    </div>
                    <button class='cart-button' onclick="AjaxButton({{ good.id }},'delete', 'cart')">&#128465;&#65039;
                    </button>
                </div>
            </div>
        {% endfor %}
    </div>
    <button class='cart-button' onclick="AjaxButton('','set', 'order')">Submit Order</button>
{% endblock %}
{% block script %}
    function AjaxButton(id, method, controller) {
    jQuery.ajax({
    type: "POST",
    url: "/" + controller + "/" + method,
    data: {id: id},
    contentType: "application/x-www-form-urlencoded",
    success: function (response) {
    console.log("Item " + method);
    location.reload();
    },
    error: function (error) {
    console.error("Error adding item to cart", error);
    }
    });
    }
{% endblock %}